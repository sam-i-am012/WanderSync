<!-- res/layout/dialog_log_travel.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Travel"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/dialog_travelLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Travel Location"
        android:padding="10dp" />

    <EditText
        android:id="@+id/dialog_startDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estimated Start Date (YYYY-MM-DD)"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/dialog_endDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estimated End Date (YYYY-MM-DD)"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <Button
            android:id="@+id/dialog_submitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/bluegray"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
